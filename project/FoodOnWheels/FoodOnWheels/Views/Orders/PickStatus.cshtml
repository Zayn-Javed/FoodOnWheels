@model FoodOnWheels.Models.Order

@{
    ViewData["Title"] = "Update Status to Picked";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pick Order</h1>

<h3>Are you sure you want to Pick this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.foodItem.ItemName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.foodItem.ItemName)
        </dd>
    </dl>
    
    <form asp-action="PickStatus">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Pick" class="btn btn-success" /> | 
        <a asp-action="DeiverOrder" class="btn btn-info">Back to Order List</a>
    </form>
</div>
