@model FoodOnWheels.Models.Review

@{
    ViewData["Title"] = "GiveReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GiveReview</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GiveReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger" ></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Add Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="SelectRestaurant" class="btn btn-info">Back to Restaurant List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}